pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Pull code from GitHub
                git branch: 'master', url: 'https://github.com/PNP-RIT/java_demo'
            }
        }

        stage('Compile') {
            steps {
                echo 'Compiling Java file...'
                // Adjust the path to match your Java file’s location
                sh 'javac src/HelloWorld.java'
            }
        }

        stage('Run') {
            steps {
                echo 'Running Java program...'
                // Run the compiled class
                sh 'java -cp src HelloWorld'
            }
        }
    }

    post {
        success {
            echo '✅ Build and run successful!'
        }
        failure {
            echo '❌ Build failed!'
        }
    }
}
