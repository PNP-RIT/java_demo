pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/PNP-RIT/java_demo'
            }
        }

        stage('Build') {
            steps {
                echo "Building..."
                sh 'mvn clean install'
                dir('/home/preethi/jenkins-demo'){
                javac HelloWorld.java
                java Helloworld
                }
            }
        }

        stage('Test') {
            steps {
                echo "Testing..."
            }
        }
    }
}
