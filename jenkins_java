pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/PNP-RIT/java_demo'
            }
        }

        stage('Build') {
            steps {
                echo "Building..."
                cd /home/preethi/jenkins-demo
                javac Hello_RIT.java
                java Hello_RIT
            }
        }

        stage('Test') {
            steps {
                echo "Testing..."
            }
        }
    }
}
